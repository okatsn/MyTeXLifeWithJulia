// Instruction
// - For "name", make it unique among existing container
// - For all others, make it the same/consistent with that in https://github.com/okatsn/MyTeXLife
{
    "name": "MyTeXLifeWithJulia",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "devtj", // the service in docker-compose.yml
    "runServices": [
        "devtj"
    ],
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/workspace",
    // SETME: make this consistent with that in docker-compose.yml
    // Seemingly it has to be "/workspace" because very likely in `FROM qmcgaw/latexdevcontainer:latest-full` some processes are done under `WORKDIR /workspace`
    "postCreateCommand": "",
    "extensions": [
        // Common Extensions
        "gruntfuggly.todo-tree",
        "streetsidesoftware.code-spell-checker",
        "mhutchie.git-graph", // GIT and GITHUB
        "donjayamanne.githistory",
        "github.vscode-pull-request-github",
        "felipecaputo.git-project-manager",
        "eamodio.gitlens",
        "mathieu.vscode-github-actions",
        "shardulm94.trailing-spaces", // format and highlight
        "christian-kohler.path-intellisense",
        "naumovs.color-highlight", // html colors
        "royaction.color-manager",
        "shd101wyy.markdown-preview-enhanced", // markdown
        "yzhang.markdown-all-in-one",
        "tomashubelbauer.vscode-markdown-table-format",
        "joffreykern.markdown-toc",
        "bierner.emojisense", // emoji
        "wdawson.better-kill-ring", // other
        "ms-vscode.live-server",
        "mutantdino.resourcemonitor",
        "mkvoya.eps-preview",
        "ms-azuretools.vscode-docker", // Docker
        "editorconfig.editorconfig", // vscode: use .editorconfig at WORKSPACE_DIR
        "redhat.vscode-yaml",
        // MyJuliaSpace Exclusive
        "julialang.language-julia", // julia
        "colinfang.markdown-julia",
        // CHECKPPOINT: unlock me if python and jupyter are installed
        // "ms-python.python",                        // python
        // "ms-python.vscode-pylance",
        // "quarto.quarto",
        "bungcip.better-toml",
        // MyTeXLife Exclusive
        "james-yu.latex-workshop", // Latex
        "mathematic.vscode-latex",
        "jeffersonqin.latex-snippets-jeff",
        "tecosaur.latex-utilities",
        "tabnine.tabnine-vscode", // Other helpers
        "stkb.rewrap", // rewrap comments after n characters on one line
        "vscode-icons-team.vscode-icons",
    ],
    "settings": {
        "python.terminal.activateEnvironment": false,
        "gitProjectManager.baseProjectsFolders": [
            "/workspace/projects", // SUB_PROJECT_DIR
            "~/.julia/dev"
            // SETME: it is allows GPM (felipecaputo.git-project-manager) to open repo in the "projects" in a new window
        ],
        // MyTeXLife Exclusive
        "latex-workshop.latexindent.path": "latexindent",
        "latex-workshop.latexindent.args": [
            "-c",
            "%DIR%/",
            "%TMPFILE%",
            "-y=defaultIndent: '%INDENT%'"
        ],
        // SECTION: JULIA Exclusive
        // "python.defaultInterpreterPath": "/opt/conda/bin/python", // this is for quarto to correctly work with VSCode.
        "julia.environmentPath": "/workspace",
    }
}
