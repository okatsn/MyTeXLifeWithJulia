{
    "name": "MyTeXLife",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "vscode", // the service in docker-compose.yml
    "runServices": [
        "vscode"
    ],
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/workspace",
    // SETME: make this consistent with that in docker-compose.yml
    // Seemingly it has to be "/workspace" because very likely in `FROM qmcgaw/latexdevcontainer:latest-full` some processes are done under `WORKDIR /workspace`
    "postCreateCommand": "",
    "extensions": [
        "james-yu.latex-workshop",
        "mathematic.vscode-latex",
        "jeffersonqin.latex-snippets-jeff",
        "tecosaur.latex-utilities",
        // Other helpers
        "stkb.rewrap", // rewrap comments after n characters on one line
        "gruntfuggly.todo-tree",
        "streetsidesoftware.code-spell-checker",
        "tabnine.tabnine-vscode",
        // Other
        "vscode-icons-team.vscode-icons",
        // git and github
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "github.vscode-pull-request-github",
        "felipecaputo.git-project-manager",
        "eamodio.gitlens",
        "mathieu.vscode-github-actions",
        // format and highlight
        "shardulm94.trailing-spaces",
        "christian-kohler.path-intellisense",
        // html colors
        "naumovs.color-highlight",
        "royaction.color-manager",
        // markdown
        "shd101wyy.markdown-preview-enhanced",
        "yzhang.markdown-all-in-one",
        "tomashubelbauer.vscode-markdown-table-format",
        "joffreykern.markdown-toc",
    ],
    "settings": {
        // General settings
        "files.eol": "\n",
        // GPM
        // Latex settings
        "gitProjectManager.baseProjectsFolders": [
            "/workspace/projects"
            // SETME: it is PROJECT_DIR in docker-compose.yml
        ], // this allows GPM (felipecaputo.git-project-manager) to open repo in the "projects" in a new window
        "latex-workshop.linting.chktex.enabled": true,
        "latex-workshop.latex.clean.subfolder.enabled": true,
        "latex-workshop.latex.autoClean.run": "onBuilt",
        "editor.formatOnSave": true,
        "files.associations": {
            "*.tex": "latex"
        },
        "latex-workshop.latexindent.path": "latexindent",
        "latex-workshop.latexindent.args": [
            "-c",
            "%DIR%/",
            "%TMPFILE%",
            "-y=defaultIndent: '%INDENT%'"
        ],
        "latex-workshop.view.pdf.viewer": "tab",
        // okatsn
        // General
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true,
        "editor.selectionHighlight": true,
        "git.checkoutType": [
            "local",
            // "remote",
            "tags"
        ],
        // html colors
        "color-highlight.markerType": "dot-before",
        "color-manager.autoStartIntellisense": true,
        // todo-tree
        "todo-tree.general.enableFileWatcher": true,
        "todo-tree.tree.buttons.scanMode": true,
        "todo-tree.general.statusBar": "total",
        "todo-tree.regex.regex": "(//|#|%|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
        "todo-tree.general.tags": [
            "BUG",
            "HACK",
            "FIXME",
            "TODO",
            "XXX",
            "[ ]",
            "CHECKPOINT",
            "QUESTION",
            "KEYNOTE",
            "SETME",
            "todo",
            "DEBUGGING",
            "fixme",
            "WARN",
            "keynote",
            "REMINDER",
            "HELLO"
        ],
        "todo-tree.tree.showCountsInTree": true,
        // markdown
        "markdown.extension.toc.levels": "1..3",
        // others
        "cSpell.maxNumberOfProblems": 10000, // highlight more spelling errors
        // Latex Recipe
        "latex-workshop.latex.tools": [
            {
                "name": "latexmk",
                "command": "latexmk",
                "args": [
                    "-synctex=1",
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "-pdf",
                    "%DOC%"
                ]
            },
            {
                "name": "xelatex",
                "command": "xelatex",
                "args": [
                    "-synctex=1",
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "%DOC%"
                ]
            },
            {
                "name": "pdflatex",
                "command": "pdflatex",
                "args": [
                    "-synctex=1",
                    "-interaction=nonstopmode",
                    "-file-line-error",
                    "%DOC%"
                ]
            },
            {
                "name": "bibtex",
                "command": "bibtex",
                "args": [
                    "%DOCFILE%"
                ]
            },
            {
                "name": "biber",
                "command": "biber",
                "args": [
                    "%DOCFILE%"
                ]
            }
        ],
        "latex-workshop.latex.recipes": [
            {
                "name": "xelatex -> bibtex -> xelatex*2",
                "tools": [
                    "xelatex",
                    "bibtex",
                    "xelatex",
                    "xelatex"
                ]
            },
            {
                "name": "latexmk",
                "tools": [
                    "latexmk"
                ]
            },
            {
                "name": "xelatex",
                "tools": [
                    "xelatex"
                ]
            },
            {
                "name": "pdflatex -> bibtex -> pdflatex*2",
                "tools": [
                    "pdflatex",
                    "bibtex",
                    "pdflatex",
                    "pdflatex"
                ]
            },
            {
                "name": "xelatex -> biber -> xelatex*2",
                "tools": [
                    "xelatex",
                    "biber",
                    "xelatex",
                    "xelatex"
                ]
            }
        ],
        "latex-workshop.latex.clean.fileTypes": [
            "*.aux",
            "*.bbl",
            "*.blg",
            "*.idx",
            "*.ind",
            "*.lof",
            "*.lot",
            "*.out",
            "*.toc",
            "*.acn",
            "*.acr",
            "*.alg",
            "*.glg",
            "*.glo",
            "*.gls",
            "*.ist",
            "*.fls",
            "*.log",
            "*.fdb_latexmk"
        ],
    }
}
